rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Triage requests collection
    match /triage_requests/{requestId} {
      // Patients can create their own requests
      allow create: if request.auth != null 
                    && request.resource.data.patient_id == request.auth.uid;
      
      // Patients can read their own requests
      allow read: if request.auth != null 
                  && (resource.data.patient_id == request.auth.uid 
                      || hasRole('doctor') 
                      || hasRole('nurse'));
      
      // Only functions can update (for AI analysis results)
      allow update: if false;
      
      // Patients can delete their own old requests
      allow delete: if request.auth != null 
                    && resource.data.patient_id == request.auth.uid;
    }
    
    // User profiles collection
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check user roles
    function hasRole(role) {
      return request.auth != null 
             && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
  }
}