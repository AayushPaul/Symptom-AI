rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Videos can only be uploaded by authenticated users to their own folder
    match /videos/{userId}_{timestamp}_{fileName} {
      // Allow upload if authenticated and userId matches
      allow write: if request.auth != null 
                   && userId == request.auth.uid
                   && request.resource.size < 100 * 1024 * 1024  // Max 100MB
                   && request.resource.contentType.matches('video/.*');
      
      // Allow read by owner or healthcare providers
      allow read: if request.auth != null 
                  && (userId == request.auth.uid || hasRole('doctor') || hasRole('nurse'));
    }
    
    // Helper function to check roles
    function hasRole(role) {
      return request.auth != null 
             && firestore.exists(/databases/(default)/documents/users/$(request.auth.uid))
             && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == role;
    }
  }
}